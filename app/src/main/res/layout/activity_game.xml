<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010">

    <com.example.stressbustersimulator.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/leftButtons"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAutoVanish"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:text="Auto Vanish"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_glass" />

            <Button
                android:id="@+id/btnPermanent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:text="Permanent"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_glass" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Clear"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_glass" />
        </LinearLayout>

        <Button
            android:id="@+id/btnReward"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="Free Reward"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/btn_glass"
            android:textColor="@android:color/white"
            android:elevation="6dp"
            android:padding="12dp" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/satisfactionMeter"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:layout_margin="20dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/satisfaction_progress"
        android:layout_gravity="top|start"
        style="@android:style/Widget.ProgressBar.Horizontal" />

</FrameLayout>
